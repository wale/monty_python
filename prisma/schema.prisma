datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

model User {
  id       BigInt    @id
  timezone String?
  pronouns Pronoun?
}

model Pronoun {
  user          User   @relation(fields: [userId], references: [id])
  userId        BigInt @id
  subject       String
  object        String
  possessiveDet String
  possessive    String
  reflexive     String
}
